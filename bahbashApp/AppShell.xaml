<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="bahbashApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

    xmlns:views="clr-namespace:bahbashApp.Views"
    FlyoutBehavior="Disabled">

    <FlyoutItem>
        <ShellContent Title="Welcome"
                      ContentTemplate="{DataTemplate views:WelcomeView}"
                      Route="welcome" />
    </FlyoutItem>

    <TabBar>
        <ShellContent Title="PROFILE" Route="profile" ContentTemplate="{DataTemplate views:ProfileView}" />
    </TabBar>
</Shell>